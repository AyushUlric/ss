#:import SlideTansition kivy.uix.screenmanager.SlideTransition

<MyCard@MDCard>:
	text: ""
	size_hint_y: None
	padding: 1
    size_hint: 1, None
	MDLabel:
		text: root.text

	MDFillRoundFlatButton:
		id: button
		theme_text_color: "Custom"
		md_bg_color: 0,0,1,1
		text: "Choose"
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		on_release: app.file_manager_open(int(root.text[-2:]))

<MyCardR@MDCard>:
	text: ""
	size_hint_y: None
	padding: 1
    size_hint: 1, None
	MDLabel:
		text: root.text

	MDFillRoundFlatButton:
		id: button
		theme_text_color: "Custom"
		md_bg_color: 0,0,1,1
		text: "Delete"
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		on_release: app.remove(int(root.text[-2:]))

<RemoveAll@MDCard>:
	md_bg_color: 1,1,1,0.5
	size_hint_y: None
	size_hint: 1, None
	Widget:
		width: root.width/2 - b.width
    MDFillRoundFlatButton:
    	id:b
		theme_text_color: "Custom"
		md_bg_color: 0,0,1,1
		text: "Delete all"
		halign: "center"
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		on_release: app.remove_all()
	Widget:
		width: root.width/2 - b.width

ScreenManager:
	FirstScreen:
		name: "first_screen"
		id: first_screen
	UploadScreen:
		name: "upload_screen"
		id: upload_screen
	RemoveScreen:
		name: "remove_screen"
		id: remove_screen

<FirstScreen>
	MDBoxLayout:
		orientation: 'vertical'
		Widget:
			height: 50
		MDFillRoundFlatButton:
			text: "Upload Files"
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			on_release: setattr(root.manager, "current", "upload_screen")
		Widget:
			height: 1
		MDFillRoundFlatButton:
			text: "Remove Files"
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			on_release: setattr(root.manager, "current", "remove_screen")
		Widget:
			height: 50

